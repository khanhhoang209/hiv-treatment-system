@page
@model Application.Pages.MedicalRecords.CreateModel

@{
    ViewData["Title"] = "Create Medical Record";
}

<div class="container mt-4">
    <div class="card shadow rounded">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0">Create New Medical Record</h4>
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="MedicalRecord.RecordDate" class="form-label"></label>
                    <input asp-for="MedicalRecord.RecordDate" class="form-control" />
                    <span asp-validation-for="MedicalRecord.RecordDate" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="MedicalRecord.Diagnosis" class="form-label"></label>
                    <input asp-for="MedicalRecord.Diagnosis" class="form-control" />
                    <span asp-validation-for="MedicalRecord.Diagnosis" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="MedicalRecord.Treatment" class="form-label"></label>
                    <input asp-for="MedicalRecord.Treatment" class="form-control" />
                    <span asp-validation-for="MedicalRecord.Treatment" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="MedicalRecord.Notes" class="form-label"></label>
                    <input asp-for="MedicalRecord.Notes" class="form-control" />
                    <span asp-validation-for="MedicalRecord.Notes" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="MedicalRecord.DoctorId" class="form-label"></label>
                    <select asp-for="MedicalRecord.DoctorId" class="form-select" asp-items="ViewBag.DoctorId"></select>
                    <span asp-validation-for="MedicalRecord.DoctorId" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="MedicalRecord.UserId" class="form-label"></label>
                    <select asp-for="MedicalRecord.UserId" class="form-select" asp-items="ViewBag.UserId"></select>
                    <span asp-validation-for="MedicalRecord.UserId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-plus-circle"></i> Create
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
