@page
@model Application.Pages.MedicalRecords.DetailsModel

@{
    ViewData["Title"] = "Medical Record Details";
}

<div class="container mt-4">
    <div class="card shadow rounded">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Medical Record Details</h4>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 font-weight-bold text-secondary">
                    @Html.DisplayNameFor(model => model.MedicalRecord.RecordDate)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.MedicalRecord.RecordDate)
                </dd>

                <dt class="col-sm-3 font-weight-bold text-secondary">
                    @Html.DisplayNameFor(model => model.MedicalRecord.Diagnosis)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.MedicalRecord.Diagnosis)
                </dd>

                <dt class="col-sm-3 font-weight-bold text-secondary">
                    @Html.DisplayNameFor(model => model.MedicalRecord.Treatment)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.MedicalRecord.Treatment)
                </dd>

                <dt class="col-sm-3 font-weight-bold text-secondary">
                    @Html.DisplayNameFor(model => model.MedicalRecord.Notes)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.MedicalRecord.Notes)
                </dd>

                <dt class="col-sm-3 font-weight-bold text-secondary">
                    @Html.DisplayNameFor(model => model.MedicalRecord.Doctor)
                </dt>
                <dd class="col-sm-9">
                    @ViewBag.DoctorId
                </dd>

                <dt class="col-sm-3 font-weight-bold text-secondary">
                    @Html.DisplayNameFor(model => model.MedicalRecord.User)
                </dt>
                <dd class="col-sm-9">
                    @ViewBag.UserId
                </dd>
            </dl>
        </div>
        <div class="card-footer bg-light d-flex justify-content-between">
            <div>
                @if (HttpContext.Session.GetString("Role") == "User")
                {
                    <form method="post" asp-page-handler="CreatePaypalOrder">
                        <input type="hidden" name="doctorId" value="@Model.MedicalRecord.DoctorId" />
                        <input type="hidden" name="medicalRecordId" value="@Model.MedicalRecord.Id" />
                        <input type="hidden" name="totalPrice" value="@Model.TotalPrice.ToString("F2")" />

                        <p>
                            Total price: <strong>@Model.TotalPrice.ToString("C")</strong>
                        </p>
                        <button type="submit" class="btn btn-primary">Thanh toán qua PayPal</button>
                    </form>
                }
            </div>
            <div>
                @if (HttpContext.Session.GetString("Role") != "User")
                {
                    <a asp-page="./Edit" asp-route-id="@Model.MedicalRecord.Id" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                }
            </div>
            <div>
                <a asp-page="./Index" class="btn btn-sm btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>
