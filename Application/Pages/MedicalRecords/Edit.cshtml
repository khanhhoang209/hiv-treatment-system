@page
@model Application.Pages.MedicalRecords.EditModel

@{
    ViewData["Title"] = "Edit Medical Record";
}

<div class="container mt-4">
    <div class="card shadow rounded">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0">Edit Medical Record</h4>
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="MedicalRecord.Id" />

                <div class="form-group mb-3">
                    <label asp-for="MedicalRecord.RecordDate" class="form-label"></label>
                    <input asp-for="MedicalRecord.RecordDate" class="form-control" />
                    <span asp-validation-for="MedicalRecord.RecordDate" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="MedicalRecord.Diagnosis" class="form-label"></label>
                    <input asp-for="MedicalRecord.Diagnosis" class="form-control" />
                    <span asp-validation-for="MedicalRecord.Diagnosis" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="MedicalRecord.Treatment" class="form-label"></label>
                    <input asp-for="MedicalRecord.Treatment" class="form-control" />
                    <span asp-validation-for="MedicalRecord.Treatment" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="MedicalRecord.Notes" class="form-label"></label>
                    <input asp-for="MedicalRecord.Notes" class="form-control" />
                    <span asp-validation-for="MedicalRecord.Notes" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="MedicalRecord.DoctorId" class="form-label"></label>
                    <select asp-for="MedicalRecord.DoctorId"
                            class="form-select" asp-items="ViewBag.DoctorId" disabled></select>
                    <input type="hidden" asp-for="MedicalRecord.DoctorId" />
                    <span asp-validation-for="MedicalRecord.DoctorId" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="MedicalRecord.UserId" class="form-label"></label>
                    <select asp-for="MedicalRecord.UserId"
                            class="form-select" asp-items="ViewBag.UserId" disabled></select>
                    <input type="hidden" asp-for="MedicalRecord.UserId" />
                    <span asp-validation-for="MedicalRecord.UserId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-page="./Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-warning text-white">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

