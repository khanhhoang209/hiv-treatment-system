            </div>
            <div class="form-group">
                <label asp-for="MedicalRecord.DoctorId" class="control-label"></label>
                <select asp-for="MedicalRecord.DoctorId" class="form-control" asp-items="ViewBag.DoctorId" disabled></select>
                <input type="hidden" asp-for="MedicalRecord.DoctorId" />
                <span asp-validation-for="MedicalRecord.DoctorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MedicalRecord.UserId" class="control-label"></label>
