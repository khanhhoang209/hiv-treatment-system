<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MedicalRecord.Id" />
            <div class="form-group">
                <label asp-for="MedicalRecord.RecordDate" class="control-label"></label>
                <input asp-for="MedicalRecord.RecordDate" class="form-control" />
