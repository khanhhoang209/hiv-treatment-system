@page
@model Application.Pages.TestResults.CreateModel

@{
    ViewData["Title"] = "Create Test Result";
}

<h2 class="mb-4">🧪 Create New Test Result</h2>

<div class="card shadow rounded p-4 bg-light">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="TestResult.TestDate" class="form-label fw-bold">Test Date</label>
            <input asp-for="TestResult.TestDate" type="date" class="form-control" />
            <span asp-validation-for="TestResult.TestDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="TestResult.Result" class="form-label fw-bold">Result</label>
            <input asp-for="TestResult.Result" class="form-control" placeholder="Enter test result..." />
            <span asp-validation-for="TestResult.Result" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="TestResult.Notes" class="form-label fw-bold">Notes</label>
            <textarea asp-for="TestResult.Notes" rows="3" class="form-control" placeholder="Additional notes (optional)"></textarea>
            <span asp-validation-for="TestResult.Notes" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="TestResult.TypeId" class="form-label fw-semibold"></label>
            <select asp-for="TestResult.TypeId" class="form-select" asp-items="ViewBag.TypeId">
                @* Không có dòng <option value="">-- Select Test Type --</option> *@
            </select>
            <span asp-validation-for="TestResult.TypeId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="TestResult.ArvRegimentId" class="form-label fw-semibold"></label>
            <select asp-for="TestResult.ArvRegimentId" class="form-select" asp-items="ViewBag.ArvRegimentId">
                @* Không có dòng <option value="">-- Select ARV Regiment --</option> *@
            </select>
            <span asp-validation-for="TestResult.ArvRegimentId" class="text-danger"></span>
        </div>


        <div class="d-flex justify-content-between">
            <a asp-page="/MedicalRecords/Index" class="btn btn-secondary">⬅️ Back to List</a>
            <button type="submit" class="btn btn-primary">💾 Save</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
