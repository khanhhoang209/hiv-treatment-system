@page
@model Application.Pages.TestResults.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>TestResult</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TestResult.TestDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TestResult.TestDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TestResult.Result)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TestResult.Result)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TestResult.Notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TestResult.Notes)
        </dd>
        <dt class="col-sm-2">Type Name</dt>
        <dd class="col-sm-10">@Model.Type.Description</dd>
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Type.Price</dd>
        <dt class="col-sm-2">
            ARV Name
        </dt>
        <dd class="col-sm-10">
            @Model.Regimen.Name
        </dd>
        <dt class="col-sm-2">
            ARV Description
        </dt>
        <dd class="col-sm-10">
            @Model.Regimen.Description
        </dd>
        <dt class="col-sm-2">
            ARV Level
        </dt>
        <dd class="col-sm-10">
            @Model.Regimen.Level
        </dd>
    </dl>
</div>
<div>
    @if(HttpContext.Session.GetString("Role") != "User")
    {
        <a asp-page="./Edit" asp-route-id="@Model.TestResult.Id">Edit</a>
    }
    <a asp-page="/TestResults/Index"
                       asp-route-recordId="@Model.TestResult.MedicalRecordId">Back to List</a>
</div>
