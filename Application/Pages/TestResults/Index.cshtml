@page
@model Application.Pages.TestResults.IndexModel

@{
    ViewData["Title"] = "Test Results";
    var role = HttpContext.Session.GetString("Role");
    var hasData = Model.TestResult != null && Model.TestResult.Any();
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">🧪 Test Results</h2>
        @if (role == "Doctor")
        {
            <a asp-page="Create" asp-route-recordId="@Model.RecordId" class="btn btn-success">
                ➕ Create New
            </a>
        }
    </div>

    @if (hasData)
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover border rounded shadow-sm">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.TestResult[0].TestDate)</th>
                        <th>@Html.DisplayNameFor(model => model.TestResult[0].Result)</th>
                        <th>@Html.DisplayNameFor(model => model.TestResult[0].Notes)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.TestResult)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.TestDate)</td>
                            <td>@Html.DisplayFor(modelItem => item.Result)</td>
                            <td>@Html.DisplayFor(modelItem => item.Notes)</td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    @if (role != "User")
                                    {
                                        <a asp-page="./Edit"
                                           asp-route-id="@item.Id"
                                           asp-route-recordId="@item.MedicalRecordId"
                                           class="btn btn-warning text-white">
                                            ✏️ Edit
                                        </a>
                                    }
                                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info text-white">
                                        🔍 Details
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center mt-4" role="alert">
            😕 No test results available.
        </div>
    }
</div>