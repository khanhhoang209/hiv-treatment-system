@page
@model Application.Pages.PrescriptionMedicines.IndexModel
@{
    ViewData["Title"] = "Prescription Medicines";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Prescription Medicines Management</h3>
                    <div class="card-tools">
                        <a asp-page="../Prescriptions/Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Prescriptions
                        </a>
                        <a asp-page="./Create" asp-route-prescriptionId="@ViewData["PrescriptionId"]" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Add Medicine
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.PrescriptionMedicines?.Any() == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Medicine Name</th>
                                        <th>Description</th>
                                        <th>Quantity</th>
                                        <th>Dosage</th>
                                        <th>Instructions</th>
                                        <th>Times/Day</th>
                                        <th>Unit Price</th>
                                        <th>Total Price</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        decimal grandTotal = 0;
                                    }
                                    @foreach (var medicine in Model.PrescriptionMedicines)
                                    {
                                        grandTotal += medicine.TotalPrice;
                                        <tr>
                                            <td><strong>@medicine.MedicineName</strong></td>
                                            <td>@medicine.MedicineDescription</td>
                                            <td>
                                                <span class="badge badge-primary">@medicine.Quantity</span>
                                            </td>
                                            <td>
                                                <span class="badge badge-info">@medicine.Dosage mg</span>
                                            </td>
                                            <td>
                                                @if (medicine.Instructions.Length > 50)
                                                {
                                                    @(medicine.Instructions.Substring(0, 50) + "...")
                                                }
                                                else
                                                {
                                                    @medicine.Instructions
                                                }
                                            </td>
                                            <td>
                                                <span class="badge badge-success">@medicine.SumOfMedicationTime</span>
                                            </td>
                                            <td>@medicine.BoughtPrice.ToString("C")</td>
                                            <td><strong>@medicine.TotalPrice.ToString("C")</strong></td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-page="./Edit" 
                                                       asp-route-prescriptionId="@medicine.PrescriptionId" 
                                                       asp-route-medicineId="@medicine.MedicineId" 
                                                       class="btn btn-warning btn-sm">
                                                        <i class="fas fa-edit"></i> Edit
                                                    </a>
                                                    <button type="button" class="btn btn-danger btn-sm" 
                                                            onclick="confirmDelete('@medicine.PrescriptionId', '@medicine.MedicineId')">
                                                        <i class="fas fa-trash"></i> Delete
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr class="table-info">
                                        <td colspan="7"><strong>Total Cost:</strong></td>
                                        <td><strong>@grandTotal.ToString("C")</strong></td>
                                        <td></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            No medicines found for this prescription. <a asp-page="./Create" asp-route-prescriptionId="@ViewData["PrescriptionId"]">Add the first medicine</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to remove this medicine from the prescription? This action cannot be undone.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <form asp-page-handler="Delete" method="post" style="display: inline;">
                    <input type="hidden" id="deletePrescriptionId" name="prescriptionId" value="" />
                    <input type="hidden" id="deleteMedicineId" name="medicineId" value="" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(prescriptionId, medicineId) {
            document.getElementById('deletePrescriptionId').value = prescriptionId;
            document.getElementById('deleteMedicineId').value = medicineId;
            $('#deleteModal').modal('show');
        }

        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                toastr.success('@TempData["SuccessMessage"]');
            </text>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <text>
                toastr.error('@TempData["ErrorMessage"]');
            </text>
        }
    </script>
}
