@page
@model Application.Pages.PrescriptionMedicines.CreateModel
@{
    ViewData["Title"] = "Add Medicine to Prescription";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Add Medicine to Prescription</h3>
                    <div class="card-tools">
                        <a asp-page="./Index" asp-route-prescriptionId="@Model.PrescriptionId" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
                <form method="post">
                    <div class="card-body">
                        <input type="hidden" asp-for="PrescriptionId" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="CreateMedicine.MedicineId">Medicine</label>
                                    <select asp-for="CreateMedicine.MedicineId" class="form-control" id="medicineSelect">
                                        <option value="">-- Select Medicine --</option>
                                        @foreach (var medicine in Model.Medicines)
                                        {
                                            <option value="@medicine.Value" data-price="@medicine.Text.Split(" - $")[1]">@medicine.Text</option>
                                        }
                                    </select>
                                    <span asp-validation-for="CreateMedicine.MedicineId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="CreateMedicine.Quantity">Quantity</label>
                                    <input asp-for="CreateMedicine.Quantity" class="form-control" type="number" min="1" />
                                    <span asp-validation-for="CreateMedicine.Quantity" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="CreateMedicine.Dosage">Dosage (mg)</label>
                                    <input asp-for="CreateMedicine.Dosage" class="form-control" type="number" min="1" />
                                    <span asp-validation-for="CreateMedicine.Dosage" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="CreateMedicine.SumOfMedicationTime">Times per Day</label>
                                    <input asp-for="CreateMedicine.SumOfMedicationTime" class="form-control" type="number" min="1" />
                                    <span asp-validation-for="CreateMedicine.SumOfMedicationTime" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="CreateMedicine.BoughtPrice">Price</label>
                                    <input asp-for="CreateMedicine.BoughtPrice" class="form-control" type="number" step="0.01" min="0.01" id="priceInput" />
                                    <span asp-validation-for="CreateMedicine.BoughtPrice" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="CreateMedicine.Instructions">Instructions</label>
                            <textarea asp-for="CreateMedicine.Instructions" class="form-control" rows="4" placeholder="Enter detailed usage instructions..."></textarea>
                            <span asp-validation-for="CreateMedicine.Instructions" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Add Medicine
                        </button>
                        <a asp-page="./Index" asp-route-prescriptionId="@Model.PrescriptionId" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        document.getElementById('medicineSelect').addEventListener('change', function() {
            const selectedOption = this.options[this.selectedIndex];
            const price = selectedOption.getAttribute('data-price');
            if (price) {
                document.getElementById('priceInput').value = price;
            }
        });
    </script>
}
