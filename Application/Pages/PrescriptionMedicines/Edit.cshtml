@page
@model Application.Pages.PrescriptionMedicines.EditModel
@{
    ViewData["Title"] = "Edit Medicine in Prescription";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Edit Medicine in Prescription</h3>
                    <div class="card-tools">
                        <a asp-page="./Index" asp-route-prescriptionId="@Model.UpdateMedicine.PrescriptionId" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Medicines
                        </a>
                    </div>
                </div>
                <form method="post">
                    <div class="card-body">
                        <input type="hidden" asp-for="UpdateMedicine.PrescriptionId" />
                        <input type="hidden" asp-for="UpdateMedicine.MedicineId" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Medicine</label>
                                    <input type="text" class="form-control" value="@Model.MedicineName" readonly />
                                    <small class="form-text text-muted">Medicine cannot be changed. Delete and add a new medicine if needed.</small>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="UpdateMedicine.Quantity">Quantity</label>
                                    <input asp-for="UpdateMedicine.Quantity" type="number" class="form-control" min="1" />
                                    <span asp-validation-for="UpdateMedicine.Quantity" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="UpdateMedicine.Dosage">Dosage (mg)</label>
                                    <input asp-for="UpdateMedicine.Dosage" type="number" class="form-control" min="1" />
                                    <span asp-validation-for="UpdateMedicine.Dosage" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="UpdateMedicine.SumOfMedicationTime">Times per Day</label>
                                    <input asp-for="UpdateMedicine.SumOfMedicationTime" type="number" class="form-control" min="1" />
                                    <span asp-validation-for="UpdateMedicine.SumOfMedicationTime" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="UpdateMedicine.BoughtPrice">Price ($)</label>
                                    <input asp-for="UpdateMedicine.BoughtPrice" type="number" class="form-control" step="0.01" min="0.01" />
                                    <span asp-validation-for="UpdateMedicine.BoughtPrice" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="UpdateMedicine.Instructions">Instructions</label>
                            <textarea asp-for="UpdateMedicine.Instructions" class="form-control" rows="4" placeholder="Enter detailed usage instructions..."></textarea>
                            <span asp-validation-for="UpdateMedicine.Instructions" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Update Medicine
                        </button>
                        <a asp-page="./Index" asp-route-prescriptionId="@Model.UpdateMedicine.PrescriptionId" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
