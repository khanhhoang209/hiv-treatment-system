@page
@model Application.Pages.Prescriptions.DetailsModel
@{
    ViewData["Title"] = "Prescription Details";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Prescription Details</h3>
                    <div class="card-tools">
                        <a asp-page="/MedicalRecords/Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                        @if (HttpContext.Session.GetString("Role") == "Doctor")
                        {
                            <a asp-page="./Edit" asp-route-id="@Model.Prescription.Id" class="btn btn-warning">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                        }
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Prescription != null)
                    {
                        <div class="row">
                            <div class="col-md-6">
                                <h5>Basic Information</h5>
                                <table class="table table-borderless">
                                    <tr>
                                        <td><strong>Prescription Date:</strong></td>
                                        <td>@Model.Prescription.PrescriptionDate.ToString("dd/MM/yyyy HH:mm")</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Patient Name:</strong></td>
                                        <td>@Model.Prescription.PatientName</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Doctor Name:</strong></td>
                                        <td>@Model.Prescription.DoctorName</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Diagnosis:</strong></td>
                                        <td>@Model.Prescription.Diagnosis</td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-md-6">
                                <h5>Notes</h5>
                                <div class="form-group">
                                    <textarea class="form-control" rows="5" readonly>@Model.Prescription.Notes</textarea>
                                </div>
                            </div>
                        </div>

                        <hr>

                        <div class="row">
                            <div class="col-12">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h5>Prescribed Medicines</h5>
                                    @if (HttpContext.Session.GetString("Role") == "Doctor")
                                    {
                                        <a asp-page="../PrescriptionMedicines/Index" asp-route-prescriptionId="@Model.Prescription.Id" class="btn btn-info btn-sm">
                                            <i class="fas fa-pills"></i> Manage Medicines
                                        </a>
                                    }
                                </div>
                                @if (Model.Prescription.PrescriptionMedicines?.Any() == true)
                                {
                                    <div class="table-responsive">
                                        <table class="table table-bordered table-striped">
                                            <thead>
                                                <tr>
                                                    <th>Medicine Name</th>
                                                    <th>Description</th>
                                                    <th>Quantity</th>
                                                    <th>Dosage</th>
                                                    <th>Instructions</th>
                                                    <th>Medication Time</th>
                                                    <th>Unit Price</th>
                                                    <th>Total Price</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{
                                                    decimal grandTotal = 0;
                                                }
                                                @foreach (var medicine in Model.Prescription.PrescriptionMedicines)
                                                {
                                                    grandTotal += medicine.TotalPrice;
                                                    <tr>
                                                        <td><strong>@medicine.MedicineName</strong></td>
                                                        <td>@medicine.MedicineDescription</td>
                                                        <td>
                                                            <span class="badge text-dark bg-light">@medicine.Quantity</span>
                                                        </td>
                                                        <td>
                                                            <span class="badge text-dark bg-light">@medicine.Dosage mg</span>
                                                        </td>
                                                        <td>@medicine.Instructions</td>
                                                        <td>
                                                            <span class="badge text-dark bg-light">@medicine.SumOfMedicationTime times/day</span>
                                                        </td>
                                                        <td>@medicine.BoughtPrice.ToString("N0") VNĐ</td>
                                                        <td><strong>@medicine.TotalPrice.ToString("N0") VNĐ</strong></td>
                                                    </tr>
                                                }
                                            </tbody>
                                            <tfoot>
                                                <tr class="table-info">
                                                    <td colspan="7"><strong>Total Cost:</strong></td>
                                                    <td><strong>@grandTotal.ToString("N0") VNĐ</strong></td>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-warning">
                                        <i class="fas fa-exclamation-triangle"></i>
                                        No medicines prescribed for this prescription.
                                    </div>
                                }
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-circle"></i>
                            Prescription not found.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
