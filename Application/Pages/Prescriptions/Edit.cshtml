@page
@model Application.Pages.Prescriptions.EditModel
@{
    ViewData["Title"] = "Edit Prescription";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Edit Prescription</h3>
                    <div class="card-tools">
                        <a asp-page="./Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                        <a asp-page="./Details" asp-route-id="@Model.UpdatePrescription.Id" class="btn btn-info">
                            <i class="fas fa-eye"></i> View Details
                        </a>
                    </div>
                </div>
                <form method="post">
                    <div class="card-body">
                        <input type="hidden" asp-for="UpdatePrescription.Id" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Medical Record</label>
                                    <input type="text" class="form-control" value="@Model.MedicalRecordInfo" readonly />
                                    <small class="form-text text-muted">Medical record cannot be changed after creation.</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="UpdatePrescription.PrescriptionDate">Prescription Date</label>
                                    <input asp-for="UpdatePrescription.PrescriptionDate" class="form-control" type="datetime-local" />
                                    <span asp-validation-for="UpdatePrescription.PrescriptionDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="UpdatePrescription.Notes">Notes</label>
                            <textarea asp-for="UpdatePrescription.Notes" class="form-control" rows="4" placeholder="Enter prescription notes..."></textarea>
                            <span asp-validation-for="UpdatePrescription.Notes" class="text-danger"></span>
                        </div>

                        <hr>

                        <h5>Medicines</h5>
                        <div id="medicines-container">
                            @if (Model.UpdatePrescription.Medicines?.Any() == true)
                            {
                                @for (int i = 0; i < Model.UpdatePrescription.Medicines.Count; i++)
                                {
                                    <div class="medicine-item card mb-3">
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-md-3">
                                                    <div class="form-group">
                                                        <label>Medicine</label>
                                                        <select asp-for="UpdatePrescription.Medicines[i].MedicineId" class="form-control medicine-select">
                                                            <option value="">-- Select Medicine --</option>
                                                            @foreach (var medicine in Model.Medicines)
                                                            {
                                                                <option value="@medicine.Value" data-price="@medicine.Text.Split(" - ")[1]" selected="@(medicine.Value == Model.UpdatePrescription.Medicines[i].MedicineId.ToString())">@medicine.Text</option>
                                                            }
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-md-2">
                                                    <div class="form-group">
                                                        <label>Quantity</label>
                                                        <input asp-for="UpdatePrescription.Medicines[i].Quantity" type="number" class="form-control" min="1" />
                                                    </div>
                                                </div>
                                                <div class="col-md-2">
                                                    <div class="form-group">
                                                        <label>Dosage (mg)</label>
                                                        <input asp-for="UpdatePrescription.Medicines[i].Dosage" type="number" class="form-control" min="1" />
                                                    </div>
                                                </div>
                                                <div class="col-md-2">
                                                    <div class="form-group">
                                                        <label>Times/Day</label>
                                                        <input asp-for="UpdatePrescription.Medicines[i].SumOfMedicationTime" type="number" class="form-control" min="1" />
                                                    </div>
                                                </div>
                                                <div class="col-md-2">
                                                    <div class="form-group">
                                                        <label>Price</label>
                                                        <input asp-for="UpdatePrescription.Medicines[i].BoughtPrice" type="number" class="form-control" step="0.01" min="0.01" />
                                                    </div>
                                                </div>
                                                <div class="col-md-1">
                                                    <div class="form-group">
                                                        <label>&nbsp;</label>
                                                        <button type="button" class="btn btn-danger btn-block" onclick="removeMedicine(this)">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label>Instructions</label>
                                                <textarea asp-for="UpdatePrescription.Medicines[i].Instructions" class="form-control" rows="2" placeholder="Enter usage instructions..."></textarea>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>

                        <button type="button" class="btn btn-info" onclick="addMedicine()">
                            <i class="fas fa-plus"></i> Add Medicine
                        </button>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Update Prescription
                        </button>
                        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Medicine Template -->
<template id="medicine-template">
    <div class="medicine-item card mb-3">
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Medicine</label>
                        <select class="form-control medicine-select" name="UpdatePrescription.Medicines[INDEX].MedicineId">
                            <option value="">-- Select Medicine --</option>
                            @foreach (var medicine in Model.Medicines)
                            {
                                <option value="@medicine.Value" data-price="@medicine.Text.Split(" - ")[1]">@medicine.Text</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label>Quantity</label>
                        <input type="number" class="form-control" name="UpdatePrescription.Medicines[INDEX].Quantity" min="1" value="1" />
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label>Dosage (mg)</label>
                        <input type="number" class="form-control" name="UpdatePrescription.Medicines[INDEX].Dosage" min="1" value="1" />
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label>Times/Day</label>
                        <input type="number" class="form-control" name="UpdatePrescription.Medicines[INDEX].SumOfMedicationTime" min="1" value="1" />
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label>Price</label>
                        <input type="number" class="form-control" name="UpdatePrescription.Medicines[INDEX].BoughtPrice" step="0.01" min="0.01" />
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <label>&nbsp;</label>
                        <button type="button" class="btn btn-danger btn-block" onclick="removeMedicine(this)">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label>Instructions</label>
                <textarea class="form-control" name="UpdatePrescription.Medicines[INDEX].Instructions" rows="2" placeholder="Enter usage instructions..."></textarea>
            </div>
        </div>
    </div>
</template>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        let medicineIndex = @(Model.UpdatePrescription.Medicines?.Count ?? 0);

        function addMedicine() {
            const template = document.getElementById('medicine-template');
            const container = document.getElementById('medicines-container');
            
            let clone = template.content.cloneNode(true);
            
            // Replace INDEX with actual index
            const html = clone.querySelector('.medicine-item').outerHTML.replace(/INDEX/g, medicineIndex);
            container.insertAdjacentHTML('beforeend', html);
            
            medicineIndex++;
        }

        function removeMedicine(button) {
            button.closest('.medicine-item').remove();
            // Reindex remaining items
            reindexMedicines();
        }

        function reindexMedicines() {
            const medicineItems = document.querySelectorAll('.medicine-item');
            medicineItems.forEach((item, index) => {
                const inputs = item.querySelectorAll('input, select, textarea');
                inputs.forEach(input => {
                    const name = input.getAttribute('name');
                    if (name) {
                        const newName = name.replace(/\[\d+\]/, `[${index}]`);
                        input.setAttribute('name', newName);
                    }
                });
            });
        }

        // Auto-fill price when medicine is selected
        document.addEventListener('change', function(e) {
            if (e.target.classList.contains('medicine-select')) {
                const selectedOption = e.target.options[e.target.selectedIndex];
                const price = selectedOption.getAttribute('data-price');
                if (price) {
                    const priceInput = e.target.closest('.medicine-item').querySelector('input[name$=".BoughtPrice"]');
                    if (priceInput) {
                        priceInput.value = price;
                    }
                }
            }
        });
    </script>
}
