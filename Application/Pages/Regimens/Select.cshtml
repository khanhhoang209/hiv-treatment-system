@page
@model Application.Pages.Regimens.SelectModel

@{
    ViewData["Title"] = "Select Regimen";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<hr />
<div class="d-flex flex-row gap-4">
    <div class="flex-fill">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Thông tin bệnh nhân</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="PatientCondition.Age" class="form-label">Tuổi</label>
                        <input asp-for="PatientCondition.Age" class="form-control" />
                        <span asp-validation-for="PatientCondition.Age" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-2">
                        <input type="checkbox" asp-for="PatientCondition.AcuteHIVInfection" class="form-check-input" />
                        <label asp-for="PatientCondition.IsPregnant" class="form-check-label">Cấp tính</label>
                    </div>

                    <div class="form-check mb-2">
                        <input type="checkbox" asp-for="PatientCondition.ChronicHIVInfection" class="form-check-input" />
                        <label asp-for="PatientCondition.IsPregnant" class="form-check-label">Thứ tính</label>
                    </div>

                    <div class="form-check mb-2">
                        <input type="checkbox" asp-for="PatientCondition.HasAIDS" class="form-check-input" />
                        <label asp-for="PatientCondition.IsPregnant" class="form-check-label">AIDS</label>
                    </div>

                    <div class="form-check mb-2">
                        <input type="checkbox" asp-for="PatientCondition.IsPregnant" class="form-check-input" />
                        <label asp-for="PatientCondition.IsPregnant" class="form-check-label">Có thai</label>
                    </div>

                    <div class="form-check mb-2">
                        <input type="checkbox" asp-for="PatientCondition.HasHepatitisB" class="form-check-input" />
                        <label asp-for="PatientCondition.HasHepatitisB" class="form-check-label">Viêm gan B</label>
                    </div>

                    <div class="form-check mb-4">
                        <input type="checkbox" asp-for="PatientCondition.HasTB" class="form-check-input" />
                        <label asp-for="PatientCondition.HasTB" class="form-check-label">Lao</label>
                    </div>

                    <button type="submit" class="btn btn-success w-100">🔍 Tìm phác đồ</button>
                </form>
            </div>
        </div>
    </div>

    <div class="flex-fill d-flex align-items-center justify-content-center">
        <img src="/images/patient.png" alt="Hình bệnh nhân" class="img-fluid rounded shadow-sm" style="max-height: 400px;">
    </div>
</div>

<hr />

@if (Model.SuggestedRegimens != null && Model.SuggestedRegimens.Count > 0)
{
    <form method="post" asp-page-handler="SaveTestResults">
        <div class="mb-3">
            <label for="MedicalRecordId" class="form-label">Hồ sơ bệnh án</label>
            <select class="form-select" name="MedicalRecordId" required>
                <option value="">-- Chọn hồ sơ --</option>
                @foreach (var record in Model.MedicalRecords)
                {
                    <option value="@record.Id">@record.RecordDate.ToString("dd/MM/yyyy") - @record.Diagnosis</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label for="TypeId" class="form-label">Loại test</label>
            <select class="form-select" name="TypeId" required>
                <option value="">-- Chọn loại test --</option>
                @foreach (var type in Model.TestTypes)
                {
                    <option value="@type.Id">@type.Name - @type.Price.ToString("C0")</option>
                }
            </select>
        </div>

        <h3 class="mt-4">Chọn phác đồ để lưu vào kết quả test:</h3>
        <table class="table table-bordered mt-2">
            <thead>
            <tr>
                <th>Chọn</th>
                <th>Phác đồ</th>
                <th>Mô tả</th>
                <th>Cấp độ</th>
            </tr>
            </thead>
            <tbody>
            @for (int i = 0; i < Model.SuggestedRegimens.Count; i++)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="SelectedRegimenIds" value="@Model.SuggestedRegimens[i].Id" />
                    </td>
                    <td>@Model.SuggestedRegimens[i].Name</td>
                    <td>@Model.SuggestedRegimens[i].Description</td>
                    <td>@Model.SuggestedRegimens[i].Level</td>
                </tr>
            }
            </tbody>
        </table>

        <div class="mb-3">
            <label for="Result">Kết quả</label>
            <input type="text" class="form-control" name="Result" required />
        </div>
        <div class="mb-3">
            <label for="Notes">Ghi chú</label>
            <textarea class="form-control" name="Notes"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">💾 Lưu kết quả</button>
    </form>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}