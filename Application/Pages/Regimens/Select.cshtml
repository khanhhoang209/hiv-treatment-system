@page
@model Application.Pages.Regimens.SelectModel

@{
    ViewData["Title"] = "Select Regimen";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<hr />
<div class="d-flex flex-row gap-4">
    <div class="flex-fill">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Thông tin bệnh nhân</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="PatientCondition.Age" class="form-label">Tuổi</label>
                        <input asp-for="PatientCondition.Age" class="form-control" />
                        <span asp-validation-for="PatientCondition.Age" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-2">
                        <input type="checkbox" asp-for="PatientCondition.AcuteHIVInfection" class="form-check-input" />
                        <label asp-for="PatientCondition.IsPregnant" class="form-check-label">Cấp tính</label>
                    </div>

                    <div class="form-check mb-2">
                        <input type="checkbox" asp-for="PatientCondition.ChronicHIVInfection" class="form-check-input" />
                        <label asp-for="PatientCondition.IsPregnant" class="form-check-label">Thứ tính</label>
                    </div>

                    <div class="form-check mb-2">
                        <input type="checkbox" asp-for="PatientCondition.HasAIDS" class="form-check-input" />
                        <label asp-for="PatientCondition.IsPregnant" class="form-check-label">AIDS</label>
                    </div>

                    <div class="form-check mb-2">
                        <input type="checkbox" asp-for="PatientCondition.IsPregnant" class="form-check-input" />
                        <label asp-for="PatientCondition.IsPregnant" class="form-check-label">Có thai</label>
                    </div>

                    <div class="form-check mb-2">
                        <input type="checkbox" asp-for="PatientCondition.HasHepatitisB" class="form-check-input" />
                        <label asp-for="PatientCondition.HasHepatitisB" class="form-check-label">Viêm gan B</label>
                    </div>

                    <div class="form-check mb-4">
                        <input type="checkbox" asp-for="PatientCondition.HasTB" class="form-check-input" />
                        <label asp-for="PatientCondition.HasTB" class="form-check-label">Lao</label>
                    </div>

                    <button type="submit" class="btn btn-success w-100">🔍 Tìm phác đồ</button>
                </form>
            </div>
        </div>
    </div>

    <div class="flex-fill d-flex align-items-center justify-content-center">
        <img src="/images/patient.png" alt="Hình bệnh nhân" class="img-fluid rounded shadow-sm" style="max-height: 400px;">
    </div>
</div>

<hr />

@if (Model.SuggestedRegimens != null && Model.SuggestedRegimens.Count > 0)
{
    <h3 class="mt-4">Phác đồ đề xuất:</h3>
    <table class="table table-bordered table-striped mt-2">
        <thead class="thead-dark">
        <tr>
            <th>Phác đồ</th>
            <th>Mô tả</th>
            <th>Cấp độ</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.SuggestedRegimens)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Level</td>
            </tr>
        }
        </tbody>
    </table>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}