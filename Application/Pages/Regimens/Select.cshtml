@page
@model Application.Pages.Regimens.SelectModel

@{
    ViewData["Title"] = "Select Regimen";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        .page-header {
            text-align: center;
            color: white;
            margin-bottom: 40px;
        }

        .page-title {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 10px;
            text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
        }

        .page-subtitle {
            font-size: 1.1rem;
            opacity: 0.9;
            margin-bottom: 30px;
        }

        .main-container {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 30px;
            margin-bottom: 40px;
        }

        .patient-form-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .form-header {
            display: flex;
            align-items: center;
            margin-bottom: 25px;
            padding-bottom: 15px;
            border-bottom: 2px solid #f1f5f9;
        }

        .form-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: #1f2937;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .form-title i {
            color: #4f46e5;
            font-size: 1.3rem;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            font-weight: 600;
            color: #374151;
            margin-bottom: 8px;
            display: block;
            font-size: 0.95rem;
        }

        .form-control {
            border: 2px solid #e5e7eb;
            border-radius: 10px;
            padding: 12px 16px;
            font-size: 0.95rem;
            transition: all 0.3s ease;
            background: white;
        }

        .form-control:focus {
            border-color: #4f46e5;
            box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1);
            outline: none;
        }

        .checkbox-group {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 15px;
            margin-bottom: 25px;
        }

        .modern-checkbox {
            display: flex;
            align-items: center;
            background: #f8fafc;
            padding: 12px 16px;
            border-radius: 10px;
            border: 2px solid #e5e7eb;
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .modern-checkbox:hover {
            background: #f1f5f9;
            border-color: #d1d5db;
        }

        .modern-checkbox input[type="checkbox"] {
            width: 18px;
            height: 18px;
            margin-right: 10px;
            accent-color: #4f46e5;
        }

        .modern-checkbox input[type="checkbox"]:checked + label {
            color: #4f46e5;
            font-weight: 600;
        }

        .modern-checkbox label {
            margin: 0;
            cursor: pointer;
            font-size: 0.9rem;
            color: #374151;
            font-weight: 500;
        }

        .btn-search {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            color: white;
            border: none;
            padding: 15px 30px;
            border-radius: 12px;
            font-weight: 600;
            font-size: 1rem;
            width: 100%;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            box-shadow: 0 4px 15px rgba(16, 185, 129, 0.3);
        }

        .btn-search:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(16, 185, 129, 0.4);
        }

        .patient-image-container {
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .patient-image {
            max-width: 100%;
            max-height: 400px;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        }

        .results-section {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            margin-bottom: 30px;
        }

        .section-header {
            display: flex;
            align-items: center;
            margin-bottom: 25px;
            padding-bottom: 15px;
            border-bottom: 2px solid #f1f5f9;
        }

        .section-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: #1f2937;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .section-title i {
            color: #4f46e5;
            font-size: 1.3rem;
        }

        .select-group {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-bottom: 25px;
        }

        .form-select {
            border: 2px solid #e5e7eb;
            border-radius: 10px;
            padding: 12px 16px;
            font-size: 0.95rem;
            transition: all 0.3s ease;
            background: white;
        }

        .form-select:focus {
            border-color: #4f46e5;
            box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1);
            outline: none;
        }

        .regimen-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
            background: white;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
            margin-bottom: 25px;
        }

        .regimen-table thead {
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
        }

        .regimen-table th {
            padding: 16px 18px;
            font-weight: 600;
            color: #374151;
            text-align: left;
            border-bottom: 2px solid #e5e7eb;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .regimen-table td {
            padding: 16px 18px;
            border-bottom: 1px solid #f1f5f9;
            color: #4b5563;
            font-weight: 500;
        }

        .regimen-table tbody tr {
            transition: all 0.3s ease;
        }

        .regimen-table tbody tr:hover {
            background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
        }

        .regimen-table tbody tr:last-child td {
            border-bottom: none;
        }

        .level-badge {
            display: inline-flex;
            align-items: center;
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .level-badge.level-1 {
            background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
            color: #1e40af;
        }

        .level-badge.level-2 {
            background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
            color: #92400e;
        }

        .level-badge.level-3 {
            background: linear-gradient(135deg, #fecaca 0%, #fca5a5 100%);
            color: #991b1b;
        }

        .level-badge.level-4 {
            background: linear-gradient(135deg, #e9d5ff 0%, #ddd6fe 100%);
            color: #6b21a8;
        }

        .regimen-checkbox {
            width: 18px;
            height: 18px;
            accent-color: #4f46e5;
        }

        .regimen-name {
            font-weight: 600;
            color: #1f2937;
        }

        .regimen-description {
            color: #6b7280;
            font-size: 0.9rem;
            line-height: 1.4;
        }

        .input-group {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-bottom: 25px;
        }

        .textarea-group {
            margin-bottom: 25px;
        }

        .form-control.textarea {
            min-height: 100px;
            resize: vertical;
        }

        .btn-save {
            background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
            color: white;
            border: none;
            padding: 15px 30px;
            border-radius: 12px;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 10px;
            box-shadow: 0 4px 15px rgba(79, 70, 229, 0.3);
        }

        .btn-save:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(79, 70, 229, 0.4);
        }

        .alert-danger {
            background: linear-gradient(135deg, #fef2f2 0%, #fee2e2 100%);
            border: 1px solid #fecaca;
            border-radius: 10px;
            color: #991b1b;
            padding: 12px 16px;
            margin-bottom: 20px;
        }

        .text-danger {
            color: #dc2626 !important;
            font-size: 0.85rem;
            margin-top: 5px;
        }

    </style>
}

<div class="page-header">
    <h1 class="page-title">
        <i class="fas fa-user-md"></i>
        Lựa Chọn Phác Đồ Điều Trị
    </h1>
    <p class="page-subtitle">Chọn phác đồ điều trị HIV phù hợp nhất dựa trên tình trạng bệnh nhân</p>
</div>

<div class="main-container">
    <div class="patient-form-container">
        <div class="form-header">
            <h2 class="form-title">
                <i class="fas fa-user-injured"></i>
                Thông Tin Bệnh Nhân
            </h2>
        </div>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="form-group">
                <label asp-for="PatientCondition.Age" class="form-label">
                    <i class="fas fa-birthday-cake"></i>
                    Tuổi (Năm)
                </label>
                <input asp-for="PatientCondition.Age" class="form-control" placeholder="Nhập tuổi bệnh nhân" />
                <span asp-validation-for="PatientCondition.Age" class="text-danger"></span>
            </div>

            <div class="checkbox-group">
                <div class="modern-checkbox">
                    <input type="checkbox" asp-for="PatientCondition.AcuteHIVInfection" class="form-check-input" />
                    <label asp-for="PatientCondition.AcuteHIVInfection" class="form-check-label">
                        <i class="fas fa-exclamation-triangle"></i>
                        Nhiễm HIV Cấp Tính
                    </label>
                </div>

                <div class="modern-checkbox">
                    <input type="checkbox" asp-for="PatientCondition.ChronicHIVInfection" class="form-check-input" />
                    <label asp-for="PatientCondition.ChronicHIVInfection" class="form-check-label">
                        <i class="fas fa-clock"></i>
                        Nhiễm HIV Mãn Tính
                    </label>
                </div>

                <div class="modern-checkbox">
                    <input type="checkbox" asp-for="PatientCondition.HasAIDS" class="form-check-input" />
                    <label asp-for="PatientCondition.HasAIDS" class="form-check-label">
                        <i class="fas fa-virus"></i>
                        AIDS
                    </label>
                </div>

                <div class="modern-checkbox">
                    <input type="checkbox" asp-for="PatientCondition.IsPregnant" class="form-check-input" />
                    <label asp-for="PatientCondition.IsPregnant" class="form-check-label">
                        <i class="fas fa-baby"></i>
                        Có Thai
                    </label>
                </div>

                <div class="modern-checkbox">
                    <input type="checkbox" asp-for="PatientCondition.HasHepatitisB" class="form-check-input" />
                    <label asp-for="PatientCondition.HasHepatitisB" class="form-check-label">
                        <i class="fas fa-disease"></i>
                        Viêm Gan B
                    </label>
                </div>

                <div class="modern-checkbox">
                    <input type="checkbox" asp-for="PatientCondition.HasTB" class="form-check-input" />
                    <label asp-for="PatientCondition.HasTB" class="form-check-label">
                        <i class="fas fa-lungs"></i>
                        Bệnh Lao
                    </label>
                </div>
            </div>

            <button type="submit" class="btn-search">
                <i class="fas fa-search"></i>
                Tìm Phác Đồ Phù Hợp
            </button>
        </form>
    </div>

    <div class="patient-image-container">
        <img src="/images/patient.png" alt="Hình minh họa bệnh nhân" class="patient-image">
    </div>
</div>

@if (Model.SuggestedRegimens != null && Model.SuggestedRegimens.Count > 0)
{
    <div class="results-section">
        <div class="section-header">
            <h2 class="section-title">
                <i class="fas fa-clipboard-list"></i>
                Phác Đồ Được Khuyến Nghị & Kết Quả Xét Nghiệm
            </h2>
        </div>

        <form method="post" asp-page-handler="SaveTestResults">
            <div class="select-group">
                <div class="form-group">
                    <label for="MedicalRecordId" class="form-label">
                        <i class="fas fa-file-medical"></i>
                        Hồ Sơ Bệnh Án
                    </label>
                    <select class="form-select" name="MedicalRecordId" required>
                        <option value="">-- Chọn Hồ Sơ Bệnh Án --</option>
                        @foreach (var record in Model.MedicalRecords)
                        {
                            <option value="@record.Id">@record.RecordDate.ToString("dd/MM/yyyy") - @record.Diagnosis</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label for="TypeId" class="form-label">
                        <i class="fas fa-vial"></i>
                        Loại Xét Nghiệm
                    </label>
                    <select class="form-select" name="TypeId" required>
                        <option value="">-- Chọn Loại Xét Nghiệm --</option>
                        @foreach (var type in Model.TestTypes)
                        {
                            <option value="@type.Id">@type.Name - @type.Price.ToString("C0")</option>
                        }
                    </select>
                </div>
            </div>

            <h3 style="color: #374151; font-weight: 600; margin-bottom: 20px; display: flex; align-items: center; gap: 10px;">
                <i class="fas fa-pills" style="color: #4f46e5;"></i>
                Chọn Phác Đồ Cho Kết Quả Xét Nghiệm:
            </h3>

            <table class="regimen-table">
                <thead>
                    <tr>
                        <th>
                            <i class="fas fa-check-square"></i>
                            Chọn
                        </th>
                        <th>
                            <i class="fas fa-tag"></i>
                            Phác Đồ
                        </th>
                        <th>
                            <i class="fas fa-file-alt"></i>
                            Mô Tả
                        </th>
                        <th>
                            <i class="fas fa-layer-group"></i>
                            Cấp Độ
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.SuggestedRegimens.Count; i++)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" name="SelectedRegimenIds" value="@Model.SuggestedRegimens[i].Id" class="regimen-checkbox" />
                            </td>
                            <td>
                                <div class="regimen-name">@Model.SuggestedRegimens[i].Name</div>
                            </td>
                            <td>
                                <div class="regimen-description">@Model.SuggestedRegimens[i].Description</div>
                            </td>
                            <td>
                                <span class="level-badge level-@Model.SuggestedRegimens[i].Level">
                                    Cấp Độ @Model.SuggestedRegimens[i].Level
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="input-group">
                <div class="form-group">
                    <label for="Result" class="form-label">
                        <i class="fas fa-chart-line"></i>
                        Kết Quả Xét Nghiệm
                    </label>
                    <input type="text" class="form-control" name="Result" placeholder="Nhập kết quả xét nghiệm" required />
                </div>
            </div>

            <div class="textarea-group">
                <label for="Notes" class="form-label">
                    <i class="fas fa-sticky-note"></i>
                    Ghi Chú Bổ Sung
                </label>
                <textarea class="form-control textarea" name="Notes" placeholder="Nhập các ghi chú hoặc quan sát bổ sung..."></textarea>
            </div>

            <button type="submit" class="btn-save">
                <i class="fas fa-save"></i>
                Lưu Kết Quả Xét Nghiệm
            </button>
        </form>
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}