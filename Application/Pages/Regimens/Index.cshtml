@page
@using Repository.Constants
@model Application.Pages.Regimens.IndexModel

@{
    ViewData["Title"] = "Regimen Management";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        .page-header {
            text-align: center;
            color: white;
            margin-bottom: 40px;
        }

        .page-title {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 10px;
            text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
        }

        .page-subtitle {
            font-size: 1.1rem;
            opacity: 0.9;
            margin-bottom: 30px;
        }

        .action-buttons {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 15px;
            padding: 20px;
            margin-bottom: 30px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            display: flex;
            gap: 15px;
            justify-content: flex-start;
            align-items: center;
        }

        .btn-modern {
            background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
            color: white;
            border: none;
            padding: 12px 24px;
            border-radius: 10px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            box-shadow: 0 4px 15px rgba(79, 70, 229, 0.3);
        }

        .btn-modern.select {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            box-shadow: 0 4px 15px rgba(16, 185, 129, 0.3);
        }

        .btn-modern:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(79, 70, 229, 0.4);
            color: white;
            text-decoration: none;
        }

        .btn-modern.select:hover {
            box-shadow: 0 8px 25px rgba(16, 185, 129, 0.4);
        }

        .regimens-table-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            margin-bottom: 30px;
        }

        .table-header {
            display: flex;
            align-items: center;
            margin-bottom: 25px;
            padding-bottom: 15px;
            border-bottom: 2px solid #f1f5f9;
        }

        .table-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: #1f2937;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .table-title i {
            color: #4f46e5;
            font-size: 1.3rem;
        }

        .modern-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
            background: white;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        }

        .modern-table thead {
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
        }

        .modern-table th {
            padding: 18px 20px;
            font-weight: 600;
            color: #374151;
            text-align: left;
            border-bottom: 2px solid #e5e7eb;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .modern-table td {
            padding: 18px 20px;
            border-bottom: 1px solid #f1f5f9;
            color: #4b5563;
            font-weight: 500;
        }

        .modern-table tbody tr {
            transition: all 0.3s ease;
        }

        .modern-table tbody tr:hover {
            background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
            transform: scale(1.01);
        }

        .modern-table tbody tr:last-child td {
            border-bottom: none;
        }

        .level-badge {
            display: inline-flex;
            align-items: center;
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .level-badge.level-1 {
            background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
            color: #1e40af;
        }

        .level-badge.level-2 {
            background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
            color: #92400e;
        }

        .level-badge.level-3 {
            background: linear-gradient(135deg, #fecaca 0%, #fca5a5 100%);
            color: #991b1b;
        }

        .level-badge.level-4 {
            background: linear-gradient(135deg, #e9d5ff 0%, #ddd6fe 100%);
            color: #6b21a8;
        }

        .action-buttons-cell {
            display: flex;
            gap: 8px;
            align-items: center;
        }

        .action-btn {
            padding: 8px 12px;
            border-radius: 8px;
            text-decoration: none;
            font-size: 0.85rem;
            font-weight: 500;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 5px;
        }

        .action-btn.edit {
            background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
            color: white;
        }

        .action-btn.details {
            background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%);
            color: white;
        }

        .action-btn.delete {
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
            color: white;
        }

        .action-btn:hover {
            transform: translateY(-2px);
            text-decoration: none;
            color: white;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

        .no-data {
            text-align: center;
            padding: 40px;
            color: #6b7280;
            font-size: 1.1rem;
        }

        .no-data i {
            font-size: 3rem;
            margin-bottom: 15px;
            color: #d1d5db;
        }

        .regimen-name {
            font-weight: 600;
            color: #1f2937;
            font-size: 1rem;
        }

        .regimen-description {
            color: #6b7280;
            font-size: 0.9rem;
            line-height: 1.4;
            max-width: 300px;
        }
    </style>
}

<div class="page-header">
    <h1 class="page-title">
        <i class="fas fa-pills"></i>
        Quản Lý Phác Đồ
    </h1>
    <p class="page-subtitle">Quản lý các phác đồ và quy trình điều trị HIV</p>
</div>

@if (HttpContext.Session.GetString("Account") != null)
{
    <div class="action-buttons">
        <i class="fas fa-tools" style="color: #4f46e5; font-size: 1.2rem;"></i>
        <span style="color: #374151; font-weight: 600; margin-right: 10px;">Thao Tác Nhanh:</span>

        @if (HttpContext.Session.GetString("Role") == Roles.Doctor)
        {
            <a asp-page="Select" class="btn-modern select">
                <i class="fas fa-hand-pointer"></i>
                Chọn Phác Đồ
            </a>
        }
        @if (HttpContext.Session.GetString("Role") == Roles.Admin)
        {
            <a asp-page="Create" class="btn-modern">
                <i class="fas fa-plus-circle"></i>
                Tạo Phác Đồ Mới
            </a>
        }
    </div>
}

<div class="regimens-table-container">
    <div class="table-header">
        <h2 class="table-title">
            <i class="fas fa-list-ul"></i>
            Danh Sách Phác Đồ
        </h2>
    </div>

    @if (Model.ArvRegimen != null && Model.ArvRegimen.Any())
    {
        <table class="modern-table">
            <thead>
                <tr>
                    <th>
                        <i class="fas fa-tag"></i>
                        Tên Phác Đồ
                    </th>
                    <th>
                        <i class="fas fa-file-alt"></i>
                        Mô Tả
                    </th>
                    <th>
                        <i class="fas fa-layer-group"></i>
                        Cấp Độ
                    </th>
                    <th>
                        <i class="fas fa-cogs"></i>
                        Thao Tác
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ArvRegimen)
                {
                    <tr>
                        <td>
                            <div class="regimen-name">
                                @Html.DisplayFor(modelItem => item.Name)
                            </div>
                        </td>
                        <td>
                            <div class="regimen-description">
                                @Html.DisplayFor(modelItem => item.Description)
                            </div>
                        </td>
                        <td>
                            <span class="level-badge level-@item.Level">
                                Cấp Độ @Html.DisplayFor(modelItem => item.Level)
                            </span>
                        </td>
                        <td>
                            <div class="action-buttons-cell">
                                <a asp-page="./Edit" asp-route-id="@item.Id" class="action-btn edit">
                                    <i class="fas fa-edit"></i>
                                    Sửa
                                </a>
                                <a asp-page="./Details" asp-route-id="@item.Id" class="action-btn details">
                                    <i class="fas fa-eye"></i>
                                    Chi Tiết
                                </a>
                                <a asp-page="./Delete" asp-route-id="@item.Id" class="action-btn delete">
                                    <i class="fas fa-trash"></i>
                                    Xóa
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="no-data">
            <i class="fas fa-inbox"></i>
            <div>Không có phác đồ nào</div>
            <small>Tạo phác đồ mới để bắt đầu</small>
        </div>
    }
</div>